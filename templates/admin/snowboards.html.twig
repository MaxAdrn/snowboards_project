{% extends 'base.html.twig' %}

{% block link %}
    <link rel="stylesheet" href="{{ asset('css/user/index.css') }}">
{% endblock %}

{% block title %}Espace snowboards{% endblock %}

{% block main %}
    <h1>Espace snowboards</h1>
    <a href="{{ path('admin_index') }}" class="bouton">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
        </svg>
        Retour à l'espace administrateur
    </a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Marque</th>
                <th scope="col">Prix</th>
                <th scope="col">Fiche détail</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>

            {% for snowboard in snowboards %}
                <tr>
                    <th scope="row">{{ snowboard.id }}</th>
                    <td>{{ snowboard.nom }}</td>
                    <td>{{ snowboard.marque.nom }}</td>
                    <td>{{ snowboard.prix }} €</td>
                    <td><a href="{{ path('snowboards_detail', {id: snowboard.id}) }}" class="bouton">Fiche snowboard</a></td>
                    <td><a href="{{ path('admin_snowboard_delete', {id: snowboard.id}) }}" onclick="return confirm('Souhaitez-vous vraiment supprimer ce snowboard ?')" class="bouton bouton-suppr">Supprimer</a></td>
                </tr>
            {% endfor %}    
        </tbody>
    </table>
{% endblock %}
