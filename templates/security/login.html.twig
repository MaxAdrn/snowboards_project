{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}

    <section>
    {% for message in app.flashes('creation_panier') %}
        <div class="text-start alert alert-info alert-dismissible fade show" role="alert">
            <p><strong>Vous devez vous connecter pour passer commande.</strong> {{ message }}</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">Erreur sur l'email ou le mot de passe. Veuillez réessayer.</div>
            {% endif %}
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-info btn-sm" type="submit">
                Se connecter
            </button>
        </form>
        <a href="{{ path('app_forgot_password_request') }}" class="btn btn-warning btn-sm">Mot de passe oublié</a>
        <p>
            Si vous souhaitez créer un compte, cliquez ici :
            <a href="{{ path('register') }}" class="btn btn-info btn-sm">Créer un compte</a>
        </p>
    </section>
    
{% endblock %}
