{% extends 'base.html.twig' %}

{% block title %}LSC - Panier{% endblock %}

{% block main %}
{# {{dump(total)}} #}
    <div class="container mt-2">
        <section>
            <h1>Votre panier</h1>
        </section>
        <table class="table mt-5" style="color: white">
            <thead>
                <tr>
                    <th scope="col">Produit</th>
                    <th scope="col">Taille</th>
                    <th scope="col">Prix TTC</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for snow in panierData %}
                    <tr>
                        <td>{{ snow.snowboards.nom }}</td>
                        <td>{{ snow.snowboards.taille }}</td>
                        <td>{{ snow.snowboards.prix|number_format(2, ',', ' ') ~ ' €' }}</td>
                        <td>{{ snow.quantite }} (Quantité max : {{ snow.snowboards.stock }})</td>
                        <td>{{ (snow.snowboards.prix * snow.quantite)|number_format(2, ',', ' ') }} €</td>
                        <td>
                            <a href="{{ path('cart_editQty', {id: snow.snowboards.id}) }}" class="btn btn-success">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                            <a href="{{ path('cart_remove', {id: snow.snowboards.id}) }}" class="btn btn-warning">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            <a href="{{ path('cart_delete', {id: snow.snowboards.id}) }}" class="btn btn-danger" onclick="return confirm('Suppimer cet élément du panier ?');">
                                <i class="bi bi-cart-x"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Votre panier est vide</td>
                    </tr>
                {% endfor %}
                    <tr>
                        <td colspan="7">Montant total : {{ total|number_format(2, ',', ' ') ~ ' €' }}</td>
                    </tr>
            </tbody>
        </table>
        <form action="{{ path('checkout') }}" method="POST">
                        <button type="submit" class="btn btn-primary mt-3 mb-3 w-50">Payer {{ total|number_format(2, ',', ' ') }} €</button>
                    </form>


        <a href={{ path('commande_new',{panierData: panierData}) }} class="bouton">Valider le panier</a>
        <a href={{ path('snowboards_index') }} class="bouton">Continuer les achats</a>
    </div>
{% endblock %}
