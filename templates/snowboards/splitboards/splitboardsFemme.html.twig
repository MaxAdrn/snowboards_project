{% endblock %}
{% block title %}Splitboards femme{% endblock %}

{% block main %}

    <h1>Splitboards femme</h1>

    {% for snowboard in test %}
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('images/snowboards/' ~ snowboard.imageName) }}" alt="{{ snowboard.imageName }}" class="card-img-top" max-height="100px">
            <div class="card-body">
                <h5 class="card-title">{{ snowboard.nom }}</h5>
                <p class="card-text">{{ snowboard.description|slice(0, 100) ~ '...' }}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Marque : {{ snowboard.marque.nom }}</li>
                <li class="list-group-item">Pour : {{ snowboard.niveau.nom }}</li>
                <li class="list-group-item">Programme : {{ snowboard.programme.nom }}</li>
