{% block link %}
    <link rel="stylesheet" href="{{ asset('css/snowboards/index.css') }}">
{% endblock %}
{% block title %}Snowboards{% endblock %}

{% block main %}
    <a href="{{ path('recherche') }}" class="bouton">Effectuer une recherche personnalisée</a>
    <h1>Tout les snowboards</h1>

    {% for snowboard in filtre %}
