            <h4>{{ snowboard.nom }}</h4>
            <article><h6>Marque : </h6><p>{{ snowboard.marque.nom }}</p></article>
            <article><h6>Pour : </h6><p>{{ snowboard.genre.nom }}</p></article>
            <article><h6>Niveau : </h6><p>{{ snowboard.niveau.nom }}</p></article>
            <article><h6>Programme : </h6><p>{{ snowboard.programme.nom }}</p></article>
            <article><h6>Cambre : </h6><p>{{ snowboard.cambre.nom }}</p></article>
            <article><h6>Shape : </h6><p>{{ snowboard.shape.nom }}</p></article>
            <article><h6>Insert : </h6><p>{{ snowboard.snowinsert.nom }}</p></article>
            <a href="{{ path('snowboards_showbyname', {slug: snowboard.nom}) }}" class="bouton">Détail</a>
        </section>
