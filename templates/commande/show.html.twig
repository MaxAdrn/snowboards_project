{% extends 'base.html.twig' %}

{% block link %}<link rel="stylesheet" href="{{ asset('css/table.css') }}">{% endblock %}

{% block title %}Détail commande n° {{ commande.id }}{% endblock %}

{% block main %}
    <h1>Détail commande n° {{ commande.id }}</h1>
    <a href="javascript:history.go(-1)" class="btn btn-info btn-sm">Retour</a>
    <table class="table table-striped table-hover mt-4">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>ID utilisateur</th>
                <td>{{ commande.user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ commande.user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ commande.user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse de facturation</th>
                <td>{{ commande.adresseFacturation }}</td>
            </tr>
            <tr>
                <th>Produit(s)</th>
                <td>
                    {% for produits in commande.detailCommande %}
                        {{ produits.nom }}</br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ commande.montant }} €</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commande.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('admin_commande_delete', {id: commande.id}) }}" onclick="return confirm('Souhaitez-vous vraiment supprimer cette commande ?')" class="btn btn-danger btn-lg mx-auto">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
        </svg>
    </a>
{% endblock %}